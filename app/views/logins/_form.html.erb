<div class= 'row'>
  <div class = 'col-sm-12'>
    <%= form_with(model: login, local: true) do |form| %>
      <%= render 'shared/errors', obj: login%>
      <div class="form-group row col-sm-offset-4">
          <div class = "control-label col-sm-1">            
            <%= form.label :email %>
          </div>
          <div class="col-sm-5">
            <%= form.text_field :email, class:"form-control", placeholder: "example@example.com", autofocus:true %>
            </div>
      </div>
      <div class="form-group row col-sm-offset-4">
        <div class = "control-label col-sm-1">            
          <%= form.label :password %>
        </div>
        <div class="col-sm-5">
          <%= form.password_field :password, class:"form-control", placeholder: "password", autofocus:true %>
          </div>
      </div>
      
      <div class="form-group row col-sm-offset-4">
        <div class = "control-label col-sm-1">            
          <%= form.label :username %>
        </div>
        <div class="col-sm-5">
          <%= form.text_field :username, class:"form-control", placeholder: "username", autofocus:true %>
          </div>
      </div>
      <div class="form-group row col-sm-offset-5">
        <div class = "col-sm-10 offset-sm-1">
          <%= form.submit class:"btn btn-primary btn-lg" %>
        </div>
      </div>
      
    <% end %>
  </div>
</div>
