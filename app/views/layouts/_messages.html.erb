<br>
<div class="row" id="messagess">
    <div class="col-sm-10 col-sm-offset-1">
        <% flash.each do |name, msg| %>
            <div class='alert alert-<%="#{name}"%>'>
                <a href="#" class="close" data-dismiss="alert">&#215;</a>
                <% if notice%>
                    <%= content_tag :div, msg, :id =>"#{name}", class:"alert alert-success" if msg.is_a?(String) %>
                <%else%>
                    <%= content_tag :div, msg, :id =>"#{name}", class:"alert " if msg.is_a?(String) %>
                <% end %>   

            </div>
        <% end %>
    </div>
</div>