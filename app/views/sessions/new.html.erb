<h1 align="center"> Login </h1>

<%= form_for(:session, :html => {class: "form_horizontal", role: "form"}, url: acces_path) do |form| %>
    
    <div class="form-group row col-sm-offset-4">
        <div class = "control-label col-sm-1">            
          <%= form.label :email %>
        </div>
        <div class="col-sm-5">
          <%= form.email_field :email, class:"form-control", placeholder: "example@example.com", autofocus:true %>
          </div>
    </div>
    <div class="form-group row col-sm-offset-4">
      <div class = "control-label col-sm-1">            
        <%= form.label :password %>
      </div>
      <div class="col-sm-5">
        <%= form.password_field :password, class:"form-control", placeholder: "password", autofocus:true %>
        </div>
    </div>
    
    <div class="form-group row col-sm-offset-5">
      <div class = "col-sm-10 offset-sm-1">
        <%= form.submit "Login", class:"btn btn-primary btn-lg" %>
      </div>
    </div>
    
  <% end %>