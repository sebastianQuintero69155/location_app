
<h1 align="center">Places</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th id="font">Name</th>
      <th id="font">Latitude</th>
      <th id="font">Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <div class="row">
          <div class="col-sm-8 offset-sm-2 title-description">
            <td id="font"><%= place.name %></td>
            <td ><%= place.latitude %></td>
            <td ><%= place.longitude %></td>
            <td><%= link_to 'Show', place, class:"btn btn-sm btn-info"%></td>
            <td><%= link_to 'Edit', edit_place_path(place), class:"btn btn-sm btn-primary" %></td>
            <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger"%></td>
          </div>  
        </div>    
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Place', new_place_path, class:"btn btn-primary btn-lg" %>
