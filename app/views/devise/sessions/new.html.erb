<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2 class="text-center">Sign in</h2>
    <div class="form-group row ">
      <div class = "control-label col-sm-2 col-sm-offset-1">            
        <%= f.label :email, id:"sign-in-email" %>
      </div>
      <div class="col-sm-8 col-sm-offset-1">
        <%= f.email_field :email, class:"form-control", placeholder: "example@example.com", autofocus:true %>
      </div>
    </div>
    <div class="form-group row ">
      <div class = "control-label col-sm-2 col-sm-offset-1">            
        <%= f.label :password, id:"sign-in-pass" %>
      </div>
      <div class="col-sm-8 col-sm-offset-1">
        <%= f.password_field :password, class:"form-control", placeholder: "password", autofocus:true %>
      </div>
    </div>
    <div class="form-group row col-sm-offset-3">
      <div class = "control-label col-sm-8"> 
        <div class="clearfix">
          <% if devise_mapping.rememberable? -%>
            <div class="field" >
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, id:"sign-in-remember" %>
            </div>
          <% end -%>
        </div>
      </div>
    </div>
    <div class="form-group row col-sm-offset-4">
      <div class = "col-sm-7 offset-sm-1">
        <%= f.submit "Log in", class:"btn btn-primary btn-block" %>
      </div>
    </div>



  <% end %>

</div>
