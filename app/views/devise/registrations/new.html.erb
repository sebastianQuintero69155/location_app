<div align="center" class='row'>
<h2 class='text-center'>Sign up</h2>
  <div class='col-md-12'>

    <%= form_for(resource, as: resource_name, :html => {class: "form-horizontal", role: "form"}, 
        url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div class='control-label col-md-3 col-sm-offset-1'>
          <%= f.label :email %>
        </div>
        <div class="col-md-4">
          <%= f.email_field :email, class: 'form-control' , placeholder: "example@example.com", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-3 col-sm-offset-1">
          <%= f.label :password %>
        </div>
        
        <div class='col-md-4'>
          <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>
      </div>

      <div class="form-group">
        <div class='control-label col-md-3 col-sm-offset-1'>
          <%= f.label :password_confirmation %>
        </div>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-5 col-md-2">
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>